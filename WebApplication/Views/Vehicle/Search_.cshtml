@model Models.VehicleSearchModel

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <div class="form-group">

            <div class="col-md-3">
                @Html.EditorFor(model => model.RegNo, new { htmlAttributes = new { @class = "form-control", placeholder = "Reg. No." } })
            </div>
            <div class="col-md-3">
                @Html.EditorFor(model => model.OwnerName, new { htmlAttributes = new { @class = "form-control", placeholder = "Owner Name" } })
            </div>
            <div class="col-md-3">
                @Html.EditorFor(model => model.ModelNo, new { htmlAttributes = new { @class = "form-control", placeholder = "Model No" } })
            </div>
            <div class="col-md-3">
                @Html.EditorFor(model => model.MakeYear, new { htmlAttributes = new { @class = "form-control", placeholder = "Make Year" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
