@model IEnumerable<Models.VehicleDetailsModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div>

    @*http://www.codedigest.com/posts/24/search-or-filter-table-columns-in-client-side-using-jquery-in-aspnet-mvc*@

    @*<script src="@Url.Content("https://code.jquery.com/jquery-1.12.4.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("https://www.jqueryscript.net/demo/Customizable-Table-Filtering-Highlighting-Plugin-With-jQuery-FilterTable/jquery.filtertable.min.js")" type="text/javascript"></script>*@


</div>
@using (Html.BeginForm("Index", "Vehicle", FormMethod.Post))
{
    <div class="form-horizontal">

        <div class="form-group">

            <div class="col-md-3">

                <input id="txtSearchRegNo" name="txtSearchRegNo" type="text" class="form-control" placeholder="Reg. No." />

            </div>
            <div class="col-md-3">
                <input id="txtSearchOwnerName" name="txtSearchOwnerName" type="text" class="form-control" placeholder="Owner Name" />
            </div>
            <div class="col-md-3">
                <input id="txtSearchModelNo" name="txtSearchModelNo" type="text" class="form-control" placeholder="Model No." />
            </div>
            <div class="col-md-3">
                <input id="txtSearchMakeYear" name="txtSearchMakeYear" type="text" class="form-control" placeholder="MakeYear" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="form-control btn btn-primary" />
                @*@Html.ActionLink("Reset", "Index", "Vehicle", null, new { @class = "form-control btn btn-default" })*@
                <input type="button" value="Reset" class="form-control btn btn-warning" onclick="location.href='@Url.Action("Index", "Vehicle")'" />
            </div>
        </div>
    </div>
}
<table class="table">
    <tr>
        <th style="display:none">
            @Html.DisplayNameFor(model => model.VehicleId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleOwnerDetailsModels.OwnerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModelNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MakeYear)
        </th>
        <th style="display:none">
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="display:none">
                @Html.DisplayFor(modelItem => item.VehicleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleOwnerDetailsModels.OwnerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MakeYear)
            </td>
            <td style="display:none">
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.VehicleId }) |
                @Html.ActionLink("Details", "Details", new { id = item.VehicleId }) |
                @*@Html.ActionLink("Delete", "Delete", new {  id=item.VehicleId})*@
                @Html.ActionLink("Delete", "Delete", new { id = item.VehicleId }, new { onclick = "return confirm('Are you sure to delete?')" })

            </td>
        </tr>
    }

</table>
